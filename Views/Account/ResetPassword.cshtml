@using TechNova.Models.ViewModels
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="container py-5" style="max-width: 500px">
    <h2 class="mb-4 text-center">Đặt lại mật khẩu</h2>

    <form asp-action="ResetPassword" method="post" novalidate>
        @* Email được truyền ẩn *@
        <input type="hidden" asp-for="Email" />

        <div class="form-group mb-3">
            <label asp-for="NewPassword" class="form-label">Mật khẩu mới</label>
            <input asp-for="NewPassword" class="form-control" placeholder="Nhập mật khẩu mới" />
            <span asp-validation-for="NewPassword" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận lại mật khẩu" />
            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success w-100">Đặt lại mật khẩu</button>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Login" asp-controller="Account" class="text-decoration-none">Quay lại đăng nhập</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
