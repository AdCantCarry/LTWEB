@using TechNova.Models.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Tạo tài khoản";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-box">
    <div class="logo-container">
        <img src="/images/logo.png" alt="Logo" class="logo" />
    </div>

    <h2 class="auth-title">Tạo tài khoản</h2>
    <p class="auth-subtitle">Đăng ký để tiếp tục mua sắm</p>

    <form asp-action="Register" asp-controller="Account" method="post" class="auth-form">

        <div class="form-group-row">
            <input asp-for="FirstName" class="form-input" placeholder="Họ" />
            <input asp-for="LastName" class="form-input" placeholder="Tên" />
        </div>
        <span asp-validation-for="FirstName" class="error-message"></span>
        <span asp-validation-for="LastName" class="error-message"></span>

        <input asp-for="Email" class="form-input" placeholder="Email" />
        <span asp-validation-for="Email" class="error-message"></span>

        <input asp-for="Password" class="form-input" placeholder="Mật khẩu" type="password" />
        <span asp-validation-for="Password" class="error-message"></span>

        <input asp-for="ConfirmPassword" class="form-input" placeholder="Xác nhận mật khẩu" type="password" />
        <span asp-validation-for="ConfirmPassword" class="error-message"></span>

        <div class="form-check">
            <input asp-for="AgreeTerms" type="checkbox" />
            <label asp-for="AgreeTerms">
                I agree to the <a href="#">privacy policy</a> and <a href="#">terms of service</a>
            </label>
        </div>
        <span asp-validation-for="AgreeTerms" class="error-message"></span>

        <button type="submit" class="form-button">Create Account</button>
    </form>

    <div class="form-footer">
        Already have an account?
        <a href="/Account/Login">Sign in</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
