@using TechNova.Models.ViewModels
@model VerifyCodeViewModel
@{
    ViewData["Title"] = "Xác minh mã";
}

<div class="container py-5" style="max-width: 500px">
    <h2 class="mb-4 text-center">Xác minh mã đặt lại mật khẩu</h2>

    <p class="text-muted text-center mb-4">
        Mã xác minh đã được gửi đến email <strong>@Model.Email</strong>. Vui lòng nhập mã gồm 6 chữ số bên dưới.
    </p>

    <form asp-action="VerifyCode" method="post" novalidate>
        <input type="hidden" asp-for="Email" />

        <div class="form-group mb-3">
            <label asp-for="Code" class="form-label">Mã xác minh</label>
            <input asp-for="Code" class="form-control text-center fw-bold" placeholder="123456" maxlength="6" />
            <span asp-validation-for="Code" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Xác minh</button>
    </form>

    <div class="text-center mt-3">
        <form asp-action="ForgotPassword" asp-controller="Account" method="post">
            <input type="hidden" name="Email" value="@Model.Email" />
            <button type="submit" class="btn btn-link p-0">Gửi lại mã</button>
        </form>

        <a asp-action="Login" asp-controller="Account" class="d-block mt-2 text-decoration-none">Quay lại đăng nhập</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
