@using TechNova.Models.ViewModels
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container py-5" style="max-width: 500px">
    <h2 class="mb-4">Quên mật khẩu</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    <form asp-action="ForgotPassword" method="post">
        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Gửi liên kết đặt lại</button>
    </form>

    <div class="mt-3">
        <a asp-action="Login" asp-controller="Account">Quay lại đăng nhập</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
