@using TechNova.Models.ViewModels
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Đăng nhập";
}


<div class="auth-page">
    <div class="auth-box">
        <div class="logo-container">
            <img src="/images/logo.png" alt="Logo" class="logo" />
        </div>

        <h2 class="auth-title">Đăng nhập</h2>
        <p class="auth-subtitle">Chào mừng bạn trở lại</p>

        <form asp-action="Login" method="post" class="auth-form">
            <input asp-for="Email" placeholder="Email" class="form-input" />
            <span asp-validation-for="Email" class="error-message"></span>

            <input asp-for="Password" type="password" placeholder="Mật khẩu" class="form-input" />
            <span asp-validation-for="Password" class="error-message"></span>

            <div class="form-check">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>

            </div>

            @if (ViewBag.Error != null)
            {
                <div class="error-message">@ViewBag.Error</div>
            }

            <button type="submit" class="form-button">Đăng nhập</button>
        </form>

        <div class="form-footer">
            <a href="/Account/ForgotPassword">Quên mật khẩu?</a>
            <br />
            <span>Chưa có tài khoản? <a href="/Account/Register">Đăng ký</a></span>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}