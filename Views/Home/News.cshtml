@model List<TechNova.Models.News>

@{
    ViewData["Title"] = "Tin Tức Công Nghệ";
}

<!-- HERO -->
<section class="news-hero text-center text-white py-5">
    <div class="container">
        <h1 class="display-5 fw-bold">Tin Tức Công Nghệ</h1>
        <p class="lead">Cập nhật nóng hổi – xu hướng mới – sản phẩm đình đám</p>
    </div>
</section>

<!-- MỤC NỔI BẬT TỪ DATABASE -->
<section class="news-grid py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var n in Model)
            {
                <div class="col">
                    <a asp-action="NewsDetails" asp-route-id="@n.NewsId" class="text-decoration-none text-dark d-block h-100">
                        <div class="card h-100 shadow-sm news-card-hover">
                            <img src="@n.ImageUrl" class="card-img-top news-img" alt="@n.Title" loading="lazy" />
                            <div class="card-body">
                                <h5 class="card-title">@n.Title</h5>
                                <p class="card-text">
                                    @((n.Content?.Length > 100) ? n.Content.Substring(0, 100) + "..." : n.Content)
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<!-- STYLE -->
<style>
    .news-hero {
        background: linear-gradient(120deg, #000428, #004e92);
        color: #fff;
    }

    .news-img {
        height: 200px;
        object-fit: cover;
    }

    .card-title {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 3em;
        font-size: 1rem;
        font-weight: 600;
    }

    .card-text {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 2.6em;
        font-size: 0.9rem;
        color: #555;
    }

    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .news-grid a {
        text-decoration: none;
        color: inherit;
    }

        .news-grid a:hover {
            text-decoration: none;
        }
</style>
