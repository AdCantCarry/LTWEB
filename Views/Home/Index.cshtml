@{
    ViewData["Title"] = "Home";
    var saleProducts = (ViewBag.SaleProducts as List<Product>)?.Take(4).ToList();
    var appleProducts = (ViewBag.AppleProducts as List<Product>)?.Take(4).ToList();
    var samsungProducts = (ViewBag.SamsungProducts as List<Product>)?.Take(4).ToList();
}
<section class="highlight-section">
    <div class="highlight-content">
        <h1>MacBook Air M2</h1>
        <p>Hiệu năng mạnh mẽ. Mỏng nhẹ đáng kinh ngạc. Được trang bị chip Apple M2.</p>
        <div class="buttons">
            <a href="/Product/Details/1" class="btn-primary">Tìm hiểu thêm</a>
            <a href="/Product" class="btn-secondary">Mua ngay</a>
        </div>
    </div>
</section>

<section class="product-section">
    <div class="product-box">
        <h2 class="product-title">Sản phẩm đang SALE</h2>
        <div class="product-grid">
            @foreach (var item in saleProducts)
            {
                var discountedPrice = item.Price * (100 - item.DiscountPercent) / 100;
                <div class="product-card">
                    <img src="@item.MainImageUrl" alt="@item.Name" />
                    <h4>@item.Name</h4>
                    <p class="old-price">@item.Price.ToString("N0") đ</p>
                    <p class="new-price">Còn: @($"{discountedPrice:N0} đ (-{item.DiscountPercent}%)")</p>
                    <a href="/Home/ProductDetails/@item.ProductId">Xem chi tiết</a>
                </div>
            }
        </div>
    </div>
</section>

<section class="product-section">
    <div class="product-box">
        <h2 class="product-title">Sản phẩm Apple</h2>
        <div class="product-grid">
            @foreach (var item in appleProducts)
            {
                <div class="product-card">
                    <img src="@item.MainImageUrl" alt="@item.Name" />
                    <h4>@item.Name</h4>
                    <p>Giá: @item.Price.ToString("N0") đ</p>
                    <a href="/Home/ProductDetails/@item.ProductId">Xem chi tiết</a>
                </div>
            }
        </div>
    </div>
</section>

<section class="product-section">
    <div class="product-box">
