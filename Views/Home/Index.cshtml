<!-- SALE PRODUCTS -->
<section class="product-section sale-section">
    <div class="product-box">
        <h2 class="product-title">Sản phẩm đang SALE</h2>
        <div id="sale-products" class="row row-cols-1 row-cols-md-4 g-4 justify-content-center">
            @foreach (var item in saleProducts)
            {
                var discountedPrice = item.Price * (100 - item.DiscountPercent) / 100;
                <div class="col" data-aos="fade-up">
                    <div class="card h-100 text-center shadow-sm">
                        @if (item.DiscountPercent > 0)
                        {
                            <div class="discount-badge">
                                -@item.DiscountPercent%
                            </div>
                        }
                        <img src="@item.MainImageUrl" class="card-img-top product-img" alt="@item.Name" loading="lazy" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="text-muted"><del>@item.Price.ToString("N0") đ</del></p>
                            <p class="text-danger fw-bold">Còn: @($"{discountedPrice:N0} đ (-{item.DiscountPercent}%)")</p>
                            <a href="/Home/ProductDetails/@item.ProductId" class="btn btn-primary mt-2">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>

