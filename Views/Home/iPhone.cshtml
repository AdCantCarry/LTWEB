@model IEnumerable<TechNova.Models.Product>
@{
    ViewData["Title"] = "Iphone";
    var iphoneProducts = Model.Where(p => p.Category?.Name == "Iphone").ToList();
}

<section class="iphone-section">
    <h2 class="iphone-title">iPhone chính hãng – Giá tốt</h2>

    <div class="iphone-grid">
        @foreach (var product in iphoneProducts)
        {
            <div class="iphone-card">
                <img src="@Url.Content(product.MainImageUrl)" alt="@product.Name" />
                <h3>@product.Name</h3>
                @if (product.DiscountPercent > 0)
                {
                    <div class="original-price">@product.Price.ToString("N0") ₫</div>
                    <div class="discounted-price">@product.DiscountedPrice.ToString("N0") ₫</div>
                }
                else
                {
                    <div class="price">@product.Price.ToString("N0") ₫</div>
                }
            </div>
        }
    </div>
</section>
