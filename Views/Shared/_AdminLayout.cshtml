@{
    var avatarUrl = Context.Session.GetString("AvatarUrl") ?? "/images/default.jpg";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Admin - E-Shop</title>
    <link rel="stylesheet" href="@Url.Content("~/css/admin.css")" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/34.1.0/classic/ckeditor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    @RenderSection("Styles", required: false)
</head>
<body class="admin-wrapper">
    <nav class="admin-sidebar">
        <ul class="sidebar-menu">
            <li><a asp-controller="AdminDashboard" asp-action="Index"><i class="bi bi-bar-chart-line"></i><span> Dashboards</span></a></li>
            <li><a asp-controller="AdminUsers" asp-action="Index"><i class="bi bi-people"></i><span> Users</span></a></li>
            <li><a asp-controller="AdminProducts" asp-action="Index"><i class="bi bi-box-seam"></i><span> Products</span></a></li>
            <li><a asp-controller="AdminCategories" asp-action="Index"><i class="bi bi-tags"></i><span> Categories</span></a></li>
            <li><a asp-controller="AdminBrands" asp-action="Index"><i class="bi bi-building"></i><span> Brands</span></a></li>
            <li><a asp-controller="AdminOrders" asp-action="Index"><i class="bi bi-receipt-cutoff"></i><span> Orders</span></a></li>
            <li><a asp-controller="AdminNews" asp-action="Index"><i class="bi bi-newspaper"></i><span> News</span></a></li>
            <li><a asp-controller="AdminSpecifications" asp-action="Index"><i class="bi bi-list-check"></i><span> Specs</span></a></li>
            <li><a asp-controller="AdminVouchers" asp-action="Index"><i class="bi bi-list-check"></i><span> Vouchers</span></a></li>
        </ul>
        <div class="sidebar-footer">
            <a href="/"><i class="bi bi-house-door"></i><span> Trang chủ</span></a>
        </div>
    </nav>

    <main class="admin-content-wrapper">
        <header class="admin-header">
            <h1>@ViewData["Title"]</h1>
            <div class="admin-user-info">
                <img src="@avatarUrl" alt="Admin Avatar" />
                <span>@Context.Session.GetString("Username")</span>
            </div>
        </header>

        <div id="admin-content">
            @await Html.PartialAsync("_AlertMessage")
            @RenderBody()
        </div>

    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>
