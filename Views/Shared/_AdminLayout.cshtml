@{
    var avatarUrl = Context.Session.GetString("AvatarUrl") ?? "/images/default.jpg";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Admin - E-Shop</title>
    <link rel="stylesheet" href="@Url.Content("~/css/admin.css")" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
@RenderSection("Styles", required: false)
<body class="admin-wrapper">
    <nav class="admin-sidebar">
        <h2>Admin Panel</h2>
        <ul>
            <li><a asp-controller="AdminUsers" asp-action="Index">Users</a></li>
            <li><a asp-controller="AdminProducts" asp-action="Index">Products</a></li>
            <li><a asp-controller="AdminCategories" asp-action="Index">Categories</a></li>
            <li><a asp-controller="AdminBrands" asp-action="Index">Brands</a></li>
            <li><a asp-controller="AdminOrders" asp-action="Index">Orders</a></li>
            <li><a asp-controller="AdminNews" asp-action="Index">News</a></li>
        </ul>

        <hr />

        <!-- Nút quay về trang chủ -->
        <a href="/" class="btn-home-link">← Trang chủ</a>
    </nav>

    <main class="admin-content-wrapper">
        <header class="admin-header">
            <h1>@ViewData["Title"]</h1>
            <div class="admin-user-info">
                <img src="@avatarUrl" alt="Admin Avatar" />
                <span>@Context.Session.GetString("Username")</span>
            </div>
        </header>

        <div class="admin-content">
            @RenderBody()
        </div>
    </main>



    @RenderSection("Scripts", required: false)
</body>
</html>
