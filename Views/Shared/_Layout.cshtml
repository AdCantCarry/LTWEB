<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Shop</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet" />

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/highlight.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- HEADER -->
    <header class="glass-header">
        <div class="glass-container">
            <div class="logo">
                <a href="/">E-Shop</a>
            </div>

            <div class="menu">
                <a href="/Home/Store">Store</a>
                <a href="/Iphone">Iphone</a>
                <a href="/Watch">Watch</a>
                <a href="/Laptop">Laptop</a>
                <a href="/Accessories">Accessories</a>
            </div>

            <div class="icons">
                <form class="search-box" action="/Search" method="get">
                    <input type="text" name="query" placeholder="Search..." />
                    <button type="submit"><i class="fas fa-search"></i></button>
                </form>

                <a href="/Cart" title="Cart"><i class="fa-solid fa-bag-shopping"></i></a>

                @{
                    var username = Context.Session.GetString("Username");
                }

                @if (!string.IsNullOrEmpty(username))
                {
                    <div class="user-info">
                        <span style="margin-right: 10px;">👋 @username</span>
                        <a href="/Account/Logout" title="Đăng xuất"><i class="fas fa-sign-out-alt"></i></a>
                    </div>
                }
                else
                {
                    <a href="/Account/Login" title="Đăng nhập"><i class="fas fa-user"></i></a>
                }
            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="text-center">
            &copy; @DateTime.Now.Year - E-Shop
        </div>
    </footer>

    <!-- JS Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
