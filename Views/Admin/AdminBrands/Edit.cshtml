@using TechNova.Models.Core
@model Brand

@{
    ViewData["Title"] = "Sửa thương hiệu";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2 class="text-center text-warning fw-bold mb-4">🛠️ Sửa thương hiệu</h2>

<div class="d-flex justify-content-center align-items-center" style="min-height: 75vh;">
    <div class="card shadow border border-2 border-warning p-4 rounded-4" style="width: 100%; max-width: 600px;">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="BrandId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">🏷️ Tên thương hiệu</label>
                    <input asp-for="Name" class="form-control form-control-lg" id="brandName" placeholder="Nhập tên thương hiệu" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Cập nhật
                    </button>
                    <a href="/AdminBrands" class="btn btn-outline-secondary">⬅️ Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Tự động focus vào ô nhập tên thương hiệu khi vào trang
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("brandName").focus();
        });
    </script>
}

<style>
    .form-label {
        font-weight: 600;
        color: #333;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        }
</style>
