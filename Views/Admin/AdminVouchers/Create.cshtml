@model TechNova.Models.Core.Voucher
@{
    var success = TempData["SuccessMessage"] as string;
    var error = TempData["ErrorMessage"] as string;
    var warning = TempData["WarningMessage"] as string;

    string alertType = !string.IsNullOrEmpty(success) ? "success"
                    : !string.IsNullOrEmpty(error) ? "danger"
                    : !string.IsNullOrEmpty(warning) ? "warning"
                    : null;

    string message = success ?? error ?? warning;
    string icon = alertType switch
    {
        "success" => "bi-check-circle-fill",
        "danger" => "bi-x-circle-fill",
        "warning" => "bi-exclamation-triangle-fill",
        _ => "bi-info-circle-fill"
    };
}

@if (!string.IsNullOrEmpty(alertType))
{
    <div class="toast-alert alert-@alertType animate__animated animate__fadeInRight">
        <i class="bi @icon me-2"></i> @message
        <button type="button" class="btn-close" aria-label="Close"></button>
    </div>

    <script>
        setTimeout(() => {
            const alert = document.querySelector('.toast-alert');
            if (alert) alert.remove();
        }, 5000);

        document.querySelector('.toast-alert .btn-close')?.addEventListener('click', function () {
            this.closest('.toast-alert')?.remove();
        });
    </script>
}


@section Styles {
    <style>
        h2 {
            font-size: 1.6rem;
            font-weight: 600;
            color: #1c3faa;
            margin-bottom: 20px;
        }

        form {
            max-width: 600px;
            padding: 25px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

        .form-group {
            margin-bottom: 18px;
        }

        label {
            font-weight: 500;
            display: block;
            margin-bottom: 6px;
        }

        .form-control {
            border-radius: 6px;
            padding: 8px 12px;
        }

        .btn {
            padding: 8px 16px;
            font-size: 15px;
            border-radius: 6px;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            margin-left: 10px;
        }

        .note {
            font-size: 14px;
            color: #6c757d;
            margin-bottom: 15px;
        }
    </style>
}

<h2>Tạo mã giảm giá</h2>

<div class="note">
    Nhập thông tin voucher. Hệ thống sẽ áp dụng: <br />
    <strong>Giảm <i>X%</i> tối đa <i>Y₫</i> cho đơn hàng từ <i>Z₫</i></strong>
</div>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Code">Mã giảm giá</label>
        <input asp-for="Code" class="form-control" />
    </div>

    <div class="form-group">
        <label for="DiscountPercent">Phần trăm giảm (%)</label>
        <input asp-for="DiscountPercent" class="form-control" />
    </div>

    <div class="form-group">
        <label for="DiscountAmount">Số tiền giảm tối đa (₫)</label>
        <input asp-for="DiscountAmount" class="form-control" />
    </div>

    <div class="form-group">
        <label for="MinimumOrderAmount">Áp dụng cho đơn hàng từ (₫)</label>
        <input asp-for="MinimumOrderAmount" class="form-control" />
    </div>

    <div class="form-group">
        <label for="EndDate">Ngày hết hạn</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Quantity">Số lượng</label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Tạo</button>
    <a href="/AdminVouchers" class="btn btn-secondary">Huỷ</a>
</form>
