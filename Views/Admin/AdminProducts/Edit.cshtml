@model Product
@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewData["Title"] = "Sửa sản phẩm";
}

<h2>Sửa sản phẩm</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CategoryId">Danh mục</label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-control">
            <option value="">-- Chọn danh mục --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscountPercent">% Giảm giá</label>
        <input asp-for="DiscountPercent" class="form-control" />
        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MainImageUrl">Đường dẫn ảnh</label>
        <input asp-for="MainImageUrl" class="form-control" />
        <span asp-validation-for="MainImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Hình ảnh hiện tại:</label><br />
        <img src="@Model.MainImageUrl" alt="Ảnh sản phẩm" style="height:100px;" />
    </div>

    <!-- Màu sắc -->
    <div class="form-group">
        <label>Chọn màu sắc</label>
        <div class="d-flex align-items-center mb-2">
            <select class="form-control" id="ColorDropdown" onchange="updateSelectedColor(this)">
                <option value="">-- Chọn màu --</option>
                <option value="#FF0000">Đỏ</option>
                <option value="#00FF00">Xanh lá</option>
                <option value="#0000FF">Xanh dương</option>
                <option value="#FFFF00">Vàng</option>
                <option value="#FF00FF">Hồng</option>
                <option value="#000000">Đen</option>
                <option value="#FFFFFF">Trắng</option>
                <option value="#FFA500">Cam</option>
                <option value="#808080">Xám</option>
            </select>

            <!-- Preview màu đã chọn -->
            <div id="ColorPreview" style="width: 40px; height: 40px; margin-left: 10px; border: 1px solid #ccc;"></div>
        </div>

        <!-- Trường lưu giá trị thật (được bind vào model) -->
        <input asp-for="Color" class="form-control" id="SelectedColor" readonly />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Dung lượng</label>
        <input asp-for="Storage" class="form-control" />
        <span asp-validation-for="Storage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ảnh phụ 1</label>
        <input asp-for="SubImage1Url" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.SubImage1Url))
        {
            <img src="@Model.SubImage1Url" alt="Ảnh phụ 1" style="height:100px; margin-top:5px;" />
        }
    </div>

    <div class="form-group">
        <label>Ảnh phụ 2</label>
        <input asp-for="SubImage2Url" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.SubImage2Url))
        {
            <img src="@Model.SubImage2Url" alt="Ảnh phụ 2" style="height:100px; margin-top:5px;" />
        }
    </div>

    <div class="form-group">
        <label>Ảnh phụ 3</label>
        <input asp-for="SubImage3Url" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.SubImage3Url))
        {
            <img src="@Model.SubImage3Url" alt="Ảnh phụ 3" style="height:100px; margin-top:5px;" />
        }
    </div>

    <div class="form-group">
        <label>Ngày tạo:</label>
        <input class="form-control" value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")" disabled />
    </div>

    <div class="form-group">
        <label>Ngày cập nhật:</label>
        <input class="form-control" value="@(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")" disabled />
    </div>

    <button type="submit" class="btn btn-primary">💾 Lưu</button>
    <a href="/AdminProducts" class="btn btn-secondary">⬅️ Quay lại</a>
</form>

@section Scripts {
    <script>
        function updateSelectedColor(selectElement) {
            const color = selectElement.value;
            document.getElementById("SelectedColor").value = color;
            document.getElementById("ColorPreview").style.backgroundColor = color;
        }

        window.onload = function () {
            const currentColor = '@Model.Color';
            if (currentColor) {
                const colorBoxes = document.querySelectorAll(".color-box");
                colorBoxes.forEach(box => {
                    if (box.style.backgroundColor.toLowerCase() === currentColor.toLowerCase()) {
                        selectColor(currentColor, box);
                    }
                });
            }
        };
    </script>
}
