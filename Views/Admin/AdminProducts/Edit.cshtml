@model Product
@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewData["Title"] = "Sửa sản phẩm";
}

<h2 class="mb-4">Sửa sản phẩm</h2>

<div class="edit-form-wrapper">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ProductId" />

        <div class="form-box">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-box">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-box">
            <label for="CategoryId">Danh mục</label>
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-control">
                <option value="">-- Chọn danh mục --</option>
            </select>
        </div>

        <div class="form-box">
            <label>Thương hiệu (có thể để trống)</label>
            <select asp-for="BrandId" asp-items="ViewBag.BrandList" class="form-control">
                <option value="">-- Chưa chọn thương hiệu --</option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>

        <div class="form-box">
            <label>Số lượng tồn kho</label>
            <input asp-for="StockQuantity" class="form-control" min="0" />
            <span asp-validation-for="StockQuantity" class="text-danger"></span>
        </div>

        <div class="form-box form-check">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">Đang bán</label>
        </div>

        <div class="form-box">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-box">
            <label asp-for="DiscountPercent">% Giảm giá</label>
            <input asp-for="DiscountPercent" class="form-control" />
            <span asp-validation-for="DiscountPercent" class="text-danger"></span>
        </div>

        <div class="form-box">
            <label asp-for="MainImageUrl">Đường dẫn ảnh</label>
            <input asp-for="MainImageUrl" class="form-control" />
            <span asp-validation-for="MainImageUrl" class="text-danger"></span>

            <label class="mt-2">Hình ảnh hiện tại:</label><br />
            <img src="@Model.MainImageUrl" alt="Ảnh sản phẩm" style="height:100px;" />
        </div>

        <!-- Màu sắc -->
        <div class="form-box">
            <label>Chọn màu sắc</label>
            <div class="d-flex align-items-center mb-2">
                <select class="form-control" id="ColorDropdown" onchange="updateSelectedColor(this)">
                    <option value="">-- Chọn màu --</option>
                    <option value="#FF0000">Đỏ</option>
                    <option value="#00FF00">Xanh lá</option>
                    <option value="#0000FF">Xanh dương</option>
                    <option value="#FFFF00">Vàng</option>
                    <option value="#FF00FF">Hồng</option>
                    <option value="#000000">Đen</option>
                    <option value="#FFFFFF">Trắng</option>
                    <option value="#FFA500">Cam</option>
                    <option value="#808080">Xám</option>
                </select>
                <div id="ColorPreview" style="width: 40px; height: 40px; margin-left: 10px; border: 1px solid #ccc;"></div>
            </div>
            <input asp-for="Color" class="form-control" id="SelectedColor" readonly />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>

        <div class="form-box">
            <label>Dung lượng</label>
            <input asp-for="Storage" class="form-control" />
            <span asp-validation-for="Storage" class="text-danger"></span>
        </div>
        <!-- Có màu? -->
        <div class="form-check mt-2">
            <input asp-for="HasColor" class="form-check-input" />
            <label asp-for="HasColor" class="form-check-label">Sản phẩm có nhiều màu</label>
        </div>

        <!-- Có dung lượng? -->
        <div class="form-check mt-2">
            <input asp-for="HasStorage" class="form-check-input" />
            <label asp-for="HasStorage" class="form-check-label">Sản phẩm có các tùy chọn dung lượng</label>
        </div>

        @for (int i = 1; i <= 3; i++)
        {
            var propName = $"SubImage{i}Url";
            var propValue = Model.GetType().GetProperty(propName).GetValue(Model) as string;
            <div class="form-box">
                <label>Ảnh phụ @i</label>
                <input asp-for="@Model.GetType().GetProperty(propName).Name" class="form-control" />
                @if (!string.IsNullOrEmpty(propValue))
                {
                    <img src="@propValue" alt="Ảnh phụ @i" style="height:100px; margin-top:5px;" />
                }
            </div>
        }

        <div class="form-box">
            <label>Ngày tạo:</label>
            <input class="form-control" value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")" disabled />
        </div>

        <div class="form-box">
            <label>Ngày cập nhật:</label>
            <input class="form-control" value="@(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")" disabled />
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">💾 Lưu</button>
            <a href="/AdminProducts" class="btn btn-secondary">⬅️ Quay lại</a>
        </div>
    </form>
</div>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@modelError.ErrorMessage</li>
            }
        </ul>
    </div>
}

@section Scripts {
    <script>
        function updateSelectedColor(selectElement) {
            const color = selectElement.value;
            document.getElementById("SelectedColor").value = color;
            document.getElementById("ColorPreview").style.backgroundColor = color;
        }

        window.onload = function () {
            const currentColor = '@Model.Color';
            if (currentColor) {
                document.getElementById("SelectedColor").value = currentColor;
                document.getElementById("ColorPreview").style.backgroundColor = currentColor;
            }
        };
    </script>
}

<style>
    .edit-form-wrapper {
        background: #fff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        max-width: 800px;
        margin: auto;
    }

    .form-box {
        margin-bottom: 20px;
    }

    .form-check {
        display: flex;
        align-items: center;
    }

        .form-check label {
            margin-left: 8px;
            margin-bottom: 0;
        }

    h2 {
        text-align: center;
        font-weight: bold;
        margin-bottom: 25px;
    }
</style>
