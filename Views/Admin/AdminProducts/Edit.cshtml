@using TechNova.Models.Core
@model Product
@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewData["Title"] = "Sửa sản phẩm";
}

<h2 class="mb-4 text-center fw-bold">Sửa sản phẩm</h2>

<div class="edit-form-wrapper">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ProductId" />

        <div class="row">
            <!-- CỘT TRÁI -->
            <div class="col-md-6">
                <!-- Nhóm: Tên + Mô tả -->
                <div class="form-box">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-box">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Nhóm: Danh mục + Thương hiệu -->
                <div class="form-box">
                    <label for="CategoryId">Danh mục</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-control">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                </div>

                <div class="form-box">
                    <label>Thương hiệu (có thể để trống)</label>
                    <select asp-for="BrandId" asp-items="ViewBag.BrandList" class="form-control">
                        <option value="">-- Chưa chọn thương hiệu --</option>
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>

                <!-- Nhóm: Giá + Giảm + Tồn kho -->
                <div class="row-inside-3">
                    <div>
                        <div class="form-box">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <div class="form-box">
                            <label asp-for="DiscountPercent">% Giảm giá</label>
                            <input asp-for="DiscountPercent" class="form-control" />
                            <span asp-validation-for="DiscountPercent" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <div class="form-box">
                            <label asp-for="StockQuantity">Tồn kho</label>
                            <input asp-for="StockQuantity" class="form-control" min="0" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <!-- Nhóm: Dung lượng + Checkbox -->
                <div class="form-box">
                    <label>Dung lượng</label>
                    <input asp-for="Storage" class="form-control" />
                    <span asp-validation-for="Storage" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input asp-for="HasColor" class="form-check-input" />
                    <label asp-for="HasColor" class="form-check-label">Sản phẩm có nhiều màu</label>
                </div>

                <div class="form-check">
                    <input asp-for="HasStorage" class="form-check-input" />
                    <label asp-for="HasStorage" class="form-check-label">Sản phẩm có tùy chọn dung lượng</label>
                </div>
            </div>

            <!-- CỘT PHẢI -->
            <div class="col-md-6">
                <!-- Nhóm: Ảnh chính -->
                <div class="form-box">
                    <label asp-for="MainImageUrl">Đường dẫn ảnh chính</label>
                    <input asp-for="MainImageUrl" class="form-control" />
                    <span asp-validation-for="MainImageUrl" class="text-danger"></span>

                    @if (!string.IsNullOrEmpty(Model.MainImageUrl))
                    {
                        <div class="mt-2">
                            <img src="@Model.MainImageUrl" alt="Ảnh chính" style="height:100px;" />
                        </div>
                    }
                </div>

                <!-- Nhóm: Màu -->
                <div class="form-box">
                    <label>Chọn màu sắc</label>
                    <div class="d-flex align-items-center mb-2">
                        <select class="form-control" id="ColorDropdown" onchange="updateSelectedColor(this)">
                            <option value="">-- Chọn màu --</option>
                            <option value="#FF0000">Đỏ</option>
                            <option value="#00FF00">Xanh lá</option>
                            <option value="#0000FF">Xanh dương</option>
                            <option value="#FFFF00">Vàng</option>
                            <option value="#FF00FF">Hồng</option>
                            <option value="#000000">Đen</option>
                            <option value="#FFFFFF">Trắng</option>
                            <option value="#FFA500">Cam</option>
                            <option value="#808080">Xám</option>
                        </select>
                        <div id="ColorPreview" style="width: 40px; height: 40px; margin-left: 10px; border: 1px solid #ccc;"></div>
                    </div>
                    <input asp-for="Color" class="form-control" id="SelectedColor" readonly />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>

                <!-- Nhóm: Ảnh phụ -->
                @for (int i = 1; i <= 3; i++)
                {
                    var subUrl = (string)Model.GetType().GetProperty($"SubImage{i}Url")?.GetValue(Model);
                    <div class="form-box">
                        <label>Ảnh phụ @i</label>
                        <input name="SubImage@iUrl" class="form-control" value="@subUrl" />
                        @if (!string.IsNullOrEmpty(subUrl))
                        {
                            <img src="@subUrl" alt="Ảnh phụ @i" style="height:100px; margin-top:5px;" />
                        }
                    </div>
                }

                <!-- Nhóm: Ngày tạo / cập nhật -->
                <div class="form-box">
                    <label>Ngày tạo:</label>
                    <input class="form-control" value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")" disabled />
                </div>

                <div class="form-box">
                    <label>Ngày cập nhật:</label>
                    <input class="form-control" value="@(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")" disabled />
                </div>
            </div>
        </div>


        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">💾 Lưu</button>
            <a href="/AdminProducts" class="btn btn-secondary">⬅️ Quay lại</a>
        </div>
    </form>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@modelError.ErrorMessage</li>
            }
        </ul>
    </div>
}

@section Scripts {
    <script>
        function updateSelectedColor(selectElement) {
            const color = selectElement.value;
            document.getElementById("SelectedColor").value = color;
            document.getElementById("ColorPreview").style.backgroundColor = color;
        }

        window.onload = function () {
            const currentColor = '@Model.Color';
            if (currentColor) {
                document.getElementById("SelectedColor").value = currentColor;
                document.getElementById("ColorPreview").style.backgroundColor = currentColor;
            }
        };
    </script>
}

<style>
    /* Container chính */
    .edit-form-wrapper {
        background: #ffffff;
        padding: 32px;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
        max-width: 1100px;
        margin: auto;
        font-family: 'Segoe UI', sans-serif;
    }

        /* Grid chia 2 cột chính */
        .edit-form-wrapper .row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 32px;
        }

        /* Nhóm 3 ô nhỏ: Giá, Giảm giá, Tồn kho */
        .edit-form-wrapper .row-inside-3 {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 16px;
        }

    /* Mỗi input box */
    .form-box {
        background: #f9f9fc;
        border: 1px solid #e2e6ea;
        padding: 16px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

        .form-box label {
            font-weight: 600;
            margin-bottom: 6px;
            display: block;
            color: #333;
        }

    .form-control {
        border-radius: 6px;
        border: 1px solid #ccc;
        padding: 8px 12px;
        font-size: 0.95rem;
    }

    .form-check {
        background: #f1f3f6;
        padding: 10px 16px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .form-check label {
            margin: 0;
            font-weight: 500;
        }

    /* Hình ảnh xem trước */
    .edit-form-wrapper img {
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        max-width: 100%;
    }

    /* Preview màu */
    #ColorPreview {
        width: 40px;
        height: 40px;
        border-radius: 6px;
        border: 1px solid #ccc;
    }

    /* Nút */
    .edit-form-wrapper button.btn,
    .edit-form-wrapper a.btn {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 6px;
        margin: 0 5px;
    }
    .edit-form-wrapper .row-inside-3 {
        grid-template-columns: 1fr;
    }

    }
</style>

