@using TechNova.Models.Core
@model Product
@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    var subImageUrls = new[] { Model.SubImage1Url, Model.SubImage2Url, Model.SubImage3Url };
}
<h2 class="text-center mb-4 fw-bold">Sửa sản phẩm</h2>

<div class="edit-form-wrapper">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="ProductId" />

        <div class="row">
            <div class="col-md-6">
                <!-- Thông tin cơ bản -->
                <div class="form-box">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-box">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>
                <div class="form-box">
                    <label>Danh mục</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-control"></select>
                </div>
                <div class="form-box">
                    <label>Thương hiệu</label>
                    <select asp-for="BrandId" asp-items="ViewBag.BrandList" class="form-control"></select>
                </div>
                <div class="row-inside-3">
                    <div class="form-box">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" />
                    </div>
                    <div class="form-box">
                        <label asp-for="DiscountPercent"></label>
                        <input asp-for="DiscountPercent" class="form-control" />
                    </div>
                    <div class="form-box">
                        <label asp-for="StockQuantity"></label>
                        <input asp-for="StockQuantity" class="form-control" />
                    </div>
                </div>
                <div class="form-box">
                    <label>Dung lượng</label>
                    <input asp-for="Storage" class="form-control" />
                </div>
                <div class="form-box">
                    <label>Video</label>
                    <input asp-for="VideoUrl" class="form-control" />
                </div>
            </div>

            <!-- Ảnh -->
            <div class="col-md-6">
                <!-- Ảnh chính -->
                <div class="form-box">
                    <label>Ảnh chính</label>
                    <div class="input-group">
                        <input asp-for="MainImageUrl" id="MainImageUrl" class="form-control"
                               value="@(Model.MainImageUrl?.StartsWith("data:image") == true ? "" : Model.MainImageUrl)" />
                        <button type="button" class="btn btn-outline-secondary" onclick="document.getElementById('MainFile').click()">Chọn ảnh</button>
                        <button type="button" class="btn btn-danger" onclick="clearImage('MainImageUrl', 'main-preview')">❌</button>
                    </div>
                    <input type="file" id="MainFile" accept="image/*" style="display:none" onchange="previewImage(this, 'MainImageUrl', 'main-preview')" />
                    <img id="main-preview" class="img-preview mt-2" src="@Model.MainImageUrl" style="@(string.IsNullOrEmpty(Model.MainImageUrl) ? "display:none;" : "")" />
                </div>

                <!-- Ảnh phụ -->
                @for (int i = 1; i <= 3; i++)
                {
                    var subUrl = subImageUrls[i - 1];
                    string inputId = $"SubImage{i}Url";
                    string fileId = $"SubFile{i}";
                    string previewId = $"sub-preview-{i}";
                    <div class="form-box">
                        <label>Ảnh phụ @i</label>
                        <div class="input-group">
                            <input name="@inputId" id="@inputId" class="form-control"
                                   value="@(subUrl?.StartsWith("data:image") == true ? "" : subUrl)" />
                            <button type="button" class="btn btn-outline-secondary" onclick="document.getElementById('@fileId').click()">Chọn ảnh</button>
                            <button type="button" class="btn btn-danger" onclick="clearImage('@inputId', '@previewId')">❌</button>
                        </div>
                        <input type="file" id="@fileId" accept="image/*" style="display:none"
                               onchange="previewImage(this, '@inputId', '@previewId')" />
                        <img id="@previewId" class="img-preview mt-2" src="@subUrl" style="@(string.IsNullOrEmpty(subUrl) ? "display:none;" : "")" />
                    </div>
                }

                <!-- Màu và ngày -->
                <div class="form-box">
                    <label>Màu sắc</label>
                    <input asp-for="Color" class="form-control" />
                </div>
                <div class="form-box">
                    <label>Ngày tạo</label>
                    <input class="form-control" value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")" disabled />
                </div>
                <div class="form-box">
                    <label>Ngày cập nhật</label>
                    <input class="form-control" value="@(Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")" disabled />
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">💾 Lưu</button>
            <a href="/AdminProducts" class="btn btn-secondary">⬅️ Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function previewImage(input, inputId, previewId) {
            const file = input.files[0];
            if (file && file.type.startsWith("image/")) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById(previewId).src = e.target.result;
                    document.getElementById(previewId).style.display = "block";
                    document.getElementById(inputId).value = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        }

        function clearImage(inputId, previewId) {
            document.getElementById(inputId).value = "";
            const img = document.getElementById(previewId);
            img.src = "";
            img.style.display = "none";
        }
    </script>
}



<style>
    .img-preview {
        height: 100px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        max-width: 100%;
    }

    .edit-form-wrapper {
        background: #fff;
        padding: 32px;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
        max-width: 1100px;
        margin: auto;
    }

        .edit-form-wrapper .row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 32px;
        }

    .row-inside-3 {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
    }

    .form-box {
        background: #f9f9fc;
        border: 1px solid #e2e6ea;
        padding: 16px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

        .form-box label {
            font-weight: 600;
            display: block;
        }

    .form-control {
        border-radius: 6px;
        border: 1px solid #ccc;
        padding: 8px 12px;
        font-size: 0.95rem;
    }
</style>
