@model List<Product>
@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý Sản phẩm</h2>
<a class="btn btn-success" href="/AdminProducts/Create">Thêm mới</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ảnh</th>
            <th>Tên</th>
            <th>Giá</th>
            <th>% giảm</th>
            <th>Tạo lúc</th>
            <th>Cập nhật</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>
                    <img src="@item.MainImageUrl" alt="@item.Name" style="height: 50px;" />
                </td>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N0") ₫</td>
                <td>
                    @(item.DiscountPercent.HasValue? item.DiscountPercent.Value.ToString("N0") + " %" : "-")
                </td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    @(item.UpdatedAt.HasValue? item.UpdatedAt.Value.ToString("dd/MM/yyyy") : "-")
                </td>
                <td>
                    <a asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning">✏️ Sửa</a>

                    <a asp-controller="AdminProducts"
                       asp-action="Delete"
                       asp-route-id="@item.ProductId"
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này không?');">
                        🗑️ Xóa
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>

