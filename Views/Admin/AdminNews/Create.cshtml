@using TechNova.Models.Core
﻿
@model News

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Tạo mới tin tức";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow border border-2 border-primary p-4 rounded-5" style="width: 100%; max-width: 800px;">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">📝 Tiêu đề</label>
                    <input asp-for="Title" class="form-control form-control-lg" placeholder="Nhập tiêu đề tin tức" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label fw-semibold">📰 Nội dung</label>
                    <textarea asp-for="Content" class="form-control" rows="5" placeholder="Nhập nội dung chi tiết"></textarea>
                    <span asp-validation-for="Content" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label fw-semibold">🖼️ Link ảnh</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Dán link ảnh minh họa" />
                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                </div>

                <div class="form-check form-switch mb-4">
                    <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
                    <label asp-for="IsPublished" class="form-check-label">Xuất bản?</label>
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-plus-circle"></i> Tạo mới
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-label {
        font-weight: 600;
        color: #333;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        }

    textarea {
        resize: vertical;
    }
</style>
<script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Content'))
        .catch(error => console.error(error));
</script>