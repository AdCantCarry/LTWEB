@using TechNova.Models.Core
@model News

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa tin tức";
}

<h2 class="text-center fw-bold mb-4 text-warning">✏️ Chỉnh sửa tin tức</h2>

<div class="edit-form-wrapper">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="NewsId" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-box">
            <label asp-for="Title" class="form-label">📝 Tiêu đề</label>
            <input asp-for="Title" class="form-control form-control-lg" placeholder="Nhập tiêu đề tin tức" />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>

        <div class="form-box">
            <label asp-for="Content" class="form-label">📰 Nội dung</label>
            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Nội dung chi tiết"></textarea>
            <span asp-validation-for="Content" class="text-danger small"></span>
        </div>

        <div class="form-box">
            <label asp-for="ImageUrl" class="form-label">🖼️ Link ảnh</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Dán link ảnh minh họa" id="imageUrlInput" />
            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
            <div class="mt-3 text-center">
                <img id="imagePreview" src="@Model.ImageUrl" alt="Ảnh minh họa" style="max-height: 250px; max-width: 100%; border-radius: 10px; display: @((string.IsNullOrEmpty(Model.ImageUrl)) ? "none" : "block");" />
            </div>
        </div>

        <div class="form-check form-switch mb-4">
            <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
            <label asp-for="IsPublished" class="form-check-label">Xuất bản?</label>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4 me-2">
                <i class="bi bi-save"></i> Cập nhật
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">⬅️ Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Content'))
            .catch(error => console.error(error));

        const imageUrlInput = document.getElementById('imageUrlInput');
        const imagePreview = document.getElementById('imagePreview');

        imageUrlInput.addEventListener('input', function () {
            const url = imageUrlInput.value.trim();
            if (url) {
                imagePreview.src = url;
                imagePreview.style.display = 'block';
            } else {
                imagePreview.style.display = 'none';
            }
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <style>
        .edit-form-wrapper {
            background: #ffffff;
            padding: 32px;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
            max-width: 900px;
            margin: auto;
        }

        .form-box {
            margin-bottom: 24px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 6px;
            display: block;
        }

        .btn {
            transition: all 0.2s ease-in-out;
        }

            .btn:hover {
                transform: translateY(-1px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
            }

        textarea {
            resize: vertical;
        }
    </style>
}
