@model TechNova.Models.News

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa tin tức";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow border border-2 border-warning p-4 rounded-5" style="width: 100%; max-width: 800px;">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="NewsId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">📝 Tiêu đề</label>
                    <input asp-for="Title" class="form-control form-control-lg" placeholder="Nhập tiêu đề tin tức" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label fw-semibold">📰 Nội dung</label>
                    <textarea asp-for="Content" class="form-control" rows="5" placeholder="Nội dung chi tiết"></textarea>
                    <span asp-validation-for="Content" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label fw-semibold">🖼️ Link ảnh</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Dán link ảnh minh họa" />
                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                </div>

                <div class="form-check form-switch mb-4">
                    <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
                    <label asp-for="IsPublished" class="form-check-label">Xuất bản?</label>
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Cập nhật
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-label {
        font-weight: 600;
        color: #333;
    }

    textarea {
        resize: vertical;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        }
</style>
