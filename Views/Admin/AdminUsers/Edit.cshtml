@using TechNova.Models.Auth
@using TechNova.Models.Core
@model User

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewData["Title"] = "Sửa người dùng";
}

<section class="edit-user-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg rounded-4 p-4">
                    <h3 class="mb-4 fw-bold text-center text-primary">✏️ Sửa thông tin người dùng</h3>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="UserId" />

                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label fw-semibold">👤 Tên đăng nhập</label>
                            <input asp-for="Username" class="form-control rounded-pill" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">📧 Email</label>
                            <input asp-for="Email" class="form-control rounded-pill" />
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Role" class="form-label fw-semibold">🔐 Vai trò</label>
                            <select asp-for="Role" class="form-select rounded-pill">
                                <option value="User">User</option>
                                <option value="Admin">Admin</option>
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary rounded-pill fw-bold">
                                💾 Lưu thay đổi
                            </button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-action="Index" class="btn btn-link text-muted">← Quay lại danh sách</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ✅ STYLE -->
<style>
    .edit-user-section {
        background: #f6f9fc;
    }

    .card {
        background: #fff;
        border: none;
        border-radius: 16px;
    }

    .form-label {
        margin-bottom: 6px;
    }

    .form-control, .form-select {
        padding: 12px 16px;
        font-size: 1rem;
    }

    .btn-primary {
        padding: 12px;
        font-size: 1rem;
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0d6efd;
            opacity: 0.9;
        }
</style>
