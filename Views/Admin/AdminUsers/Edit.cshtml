@using TechNova.Models.Auth
@using TechNova.Models.Core
@model User

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewData["Title"] = "Sửa người dùng";
}

<section class="edit-user-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">
                <div class="card shadow-lg p-4 rounded-4">
                    <h3 class="mb-4 fw-bold text-center text-primary">✏️ Sửa thông tin người dùng</h3>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="UserId" />

                        <div class="form-box mb-3">
                            <label asp-for="Username" class="form-label fw-semibold">👤 Tên đăng nhập</label>
                            <input asp-for="Username" class="form-control" placeholder="Tên tài khoản" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-box mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">📧 Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email người dùng" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-box mb-4">
                            <label asp-for="Role" class="form-label fw-semibold">🔐 Vai trò</label>
                            <select asp-for="Role" class="form-select">
                                <option value="User">👥 User</option>
                                <option value="Admin">👑 Admin</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4 fw-bold rounded-pill">
                                💾 Lưu thay đổi
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary ms-2 rounded-pill">← Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ✅ STYLE -->
<style>
    .edit-user-section {
        background: #f6f9fc;
    }

    .form-box {
        padding: 15px;
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        background-color: #fdfdfd;
        transition: all 0.3s ease;
    }

        .form-box:hover {
            background-color: #eef7ff;
            border-color: #0d6efd;
        }

    .form-label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
        color: #333;
    }

    .form-control,
    .form-select {
        padding: 12px 16px;
        font-size: 1rem;
        border-radius: 8px;
    }

    .btn-primary {
        padding: 12px 24px;
        font-size: 1rem;
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0d6efd;
            opacity: 0.9;
            transform: translateY(-1px);
        }

    .btn-outline-secondary {
        padding: 12px 24px;
    }

    .text-danger {
        font-size: 0.875rem;
    }
</style>
