@using TechNova.Models.Auth
@using TechNova.Models.Core
@model List<User>
@await Html.PartialAsync("_AlertMessage")
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Người dùng</th>
            <th>Liên hệ</th>
            <th>Vai trò</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <!-- Avatar + Tên + ID -->
                <td>
                    <div class="d-flex align-items-center gap-2">
                        <img src="@user.AvatarUrl" style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%;" />
                        <div>
                            <div class="fw-bold">@user.Username</div>
                            <small class="text-muted">#@user.UserId</small>
                        </div>
                    </div>
                </td>

                <!-- Email + SĐT -->
                <td>
                    <div><i class="bi bi-envelope"></i> @user.Email</div>
                    <div><i class="bi bi-telephone"></i> @user.PhoneNumber</div>
                </td>

                <!-- Role -->
                <td><span class="badge bg-primary">@user.Role</span></td>

                <!-- Trạng thái -->
                <td>
                    @if (user.IsActive)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Đã khóa</span>
                    }
                </td>

                <!-- Hành động -->
                <td>
                    <div class="action-icons">
                        <button class="icon-btn tooltip view-user-detail" data-id="@user.UserId" data-tooltip="Xem chi tiết">
                            <i class="bi bi-info-circle-fill text-primary"></i>
                        </button>

                        <a href="/AdminUsers/Edit/@user.UserId" class="icon-btn tooltip" data-tooltip="Sửa">
                            <i class="bi bi-pencil-fill"></i>
                        </a>

                        <a href="/AdminUsers/Delete/@user.UserId" class="icon-btn tooltip" data-tooltip="Xoá"
                           onclick="return confirm('Bạn có chắc muốn xoá người dùng này không?');">
                            <i class="bi bi-trash-fill text-danger"></i>
                        </a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

<!-- Modal Chi tiết -->
<div class="user-detail-overlay" id="userOverlay" style="display:none;">
    <div class="overlay-bg" onclick="closeUserPopup()"></div>
    <div class="user-detail-popup" onclick="event.stopPropagation();">
        <div class="popup-header d-flex justify-content-between align-items-center mb-2">
            <h5 class="m-0">Chi tiết người dùng</h5>
        </div>
        <div id="userDetailBody">
            <div class="text-center text-muted">Đang tải thông tin...</div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function closeUserPopup() {
            document.getElementById('userOverlay').style.display = 'none';
            document.getElementById('userDetailBody').innerHTML = '<div class="text-center text-muted">Đang tải thông tin...</div>';
        }

        document.querySelectorAll('.view-user-detail').forEach(btn => {
            btn.addEventListener('click', function () {
                const userId = this.dataset.id;

                fetch(`/AdminUsers/DetailPartial/${userId}`)
                    .then(res => res.text())
                    .then(html => {
                        document.getElementById("userDetailBody").innerHTML = html;
                        document.getElementById("userOverlay").style.display = 'block';
                    })
                    .catch(err => {
                        document.getElementById("userDetailBody").innerHTML = "<div class='text-danger'>Không thể tải dữ liệu.</div>";
                    });
            });
        });
    </script>
}


@section Styles {
    <style>
        .action-icons {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .icon-btn {
            background-color: #f1f3f5;
            border: none;
            border-radius: 50%;
            padding: 6px 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .icon-btn:hover {
                background-color: #e0e0e0;
            }

            .icon-btn i {
                font-size: 16px;
                color: #333;
            }

        .tooltip {
            position: relative;
        }

            .tooltip:hover::after {
                content: attr(data-tooltip);
                position: absolute;
                bottom: 110%;
                left: 50%;
                transform: translateX(-50%);
                background-color: #333;
                color: #fff;
                padding: 4px 8px;
                font-size: 12px;
                border-radius: 4px;
                white-space: nowrap;
                z-index: 1000;
            }
        .user-detail-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1055;
        }

            .user-detail-overlay .overlay-bg {
                position: absolute;
                top: 0;
                left: 0;
                background-color: rgba(0, 0, 0, 0.6);
                width: 100%;
                height: 100%;
                z-index: 1;
            }

        .user-detail-popup {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            max-width: 600px;
            width: 90%;
            border-radius: 12px;
            padding: 1.5rem;
            z-index: 2;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
            animation: fadeIn 0.3s ease-in-out;
            cursor: default;    
        }

        
    </style>
}
