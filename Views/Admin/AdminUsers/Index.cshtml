@model List<User>
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý Người dùng</h2>
<a class="btn btn-success" href="/AdminUsers/Create">Thêm người dùng</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr><th>ID</th><th>Tên</th><th>Email</th><th>Role</th><th>CreateAt</th><th>IsActive</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserId</td>
                <td>@item.Username</td>
                <td>@item.Email</td>
                <td>@item.Role</td>
                <td>@item.CreatedAt</td>
                <td>@item.IsActive</td>
                <td>
                    <a href="/AdminUsers/Edit/@item.UserId" class="btn btn-primary btn-sm">Sửa</a>
                    <a href="/AdminUsers/Delete/@item.UserId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
