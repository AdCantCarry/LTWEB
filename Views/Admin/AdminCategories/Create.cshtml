@using TechNova.Models.Core
@model Category

@{
    ViewData["Title"] = "Thêm danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 text-center fw-bold">Thêm danh mục</h2>

<div class="edit-form-wrapper">
    <form asp-action="Create" method="post">
        <div class="row">
            <!-- CỘT TRÁI -->
            <div class="col-md-6">
                <div class="form-box">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-box">
                    <label asp-for="MainImageUrl">Ảnh đại diện (URL)</label>
                    <input asp-for="MainImageUrl" class="form-control" />
                    <span asp-validation-for="MainImageUrl" class="text-danger"></span>
                </div>
            </div>

            <!-- CỘT PHẢI -->
            <div class="col-md-6">
                <div class="form-box">
                    <label asp-for="Description">Mô tả danh mục</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-box">
                    <label asp-for="SvgUrl">Svg danh mục (URL)</label>
                    <input asp-for="SvgUrl" class="form-control" />
                    <span asp-validation-for="SvgUrl" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">💾 Lưu</button>
            <a href="/AdminCategories" class="btn btn-secondary">⬅️ Quay lại</a>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .edit-form-wrapper {
            background: #ffffff;
            padding: 32px;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
            max-width: 1100px;
            margin: auto;
        }

            .edit-form-wrapper .row {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 32px;
            }

        .form-box {
            background: #f9f9fc;
            border: 1px solid #e2e6ea;
            padding: 16px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

            .form-box label {
                font-weight: 600;
                margin-bottom: 6px;
                display: block;
            }

        .form-control {
            border-radius: 6px;
            padding: 8px 12px;
            font-size: 0.95rem;
        }
    </style>
}
