@model List<Product>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Products";
}
<h2>Products</h2>
<a class="btn" href="/AdminProducts/Create">Thêm sản phẩm</a>
<table>
    <thead>
        <tr><th>Tên</th><th>Giá</th><th>Hành động</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a href="/AdminProducts/Edit/@item.ProductId">Sửa</a> |
                    <a href="/AdminProducts/Delete/@item.ProductId" onclick="return confirm('Xoá?')">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
